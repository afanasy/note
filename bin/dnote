#!/usr/bin/env node

'use strict';
process.title = process.bin = 'dnote';

var Path = require('path'),
    note = require(Path.join(__dirname,'../index.js')),
    portfinder = require('portfinder'),
    opener = require('opener'),
    parser = require("nomnom");

parser.command('serve')
  .callback(function(opts) {
    var config = {};
    if(opts[1]) { 
    	config.content = Path.resolve(opts[1]); 
    } else { 
    	config.content = process.cwd();
    }
    note.start(config);
  })
  .help("Serve the markdown files on the current folder.");

parser.parse();